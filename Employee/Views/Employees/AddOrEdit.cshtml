@model Employee.Models.Employee
@{
    ViewBag.Title = "AddOrEdit";
}
<head>
    <link href="~/Scripts/cssAddOrEdit.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>

<br />
<div class="container">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card box">
                    @Html.HiddenFor(model => model.Id);
                    <a href="@Url.Action("Index", "Employees")" class="btn btn-default"><i class="fas fa-backward"></i></a>
                    <h1><i class="far fa-address-card"></i> New Employee</h1>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @style = "color: red" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control", @placeholder = "Position" } })
                        @Html.ValidationMessageFor(model => model.Position, "", new { @style = "color: red" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "Age" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @style = "color: red" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control", @placeholder = "Salary" } })
                        @Html.ValidationMessageFor(model => model.Salary, "", new { @style = "color: red" })
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(model => model.IsActive)
                    </div>
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        var Invalid_Data = '@TempData["Invalid_Data"]';
        if (Invalid_Data != '') {
            alertify.error(Invalid_Data);
        }
    });

    function resetform() {
        alert()
    }
</script>